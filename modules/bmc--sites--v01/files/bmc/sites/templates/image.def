    license="copyrighted -- all rights reserved";
    DEF SUFFIX=".png";
    
    image="@<@parent.LANG>.image";
    linktext="@<@parent.LANG>.linktext";
    title="@<@parent.LANG>.title";
    description="@<@parent.LANG>.description";
    de-at
    {
        image="Abbildung";
        linktext="Abbildung in neuem Tab/Fenster Ã¶ffnen."
    }
    en-us
    {
        image="Image";
        linktext="Open image in new tab/window.";
    }
    
    DEF PRINT
    {
        ->
        @DIV[text='<div ']@DIV.STYLE[text='style="#"']@DIV[text='>']<img src="images/@name@SUFFIX">@DIV[text='</div>']
        <--
    }
    DEF CTEXT
    {
        ->
        
        @image (@name@SUFFIX): @title -- @description
        <a href="../images/@name@SUFFIX" target="_blank">@linktext</a>
        
        <--
    }
}