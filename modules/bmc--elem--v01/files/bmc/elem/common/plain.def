
//MODULE::

DEF IMPL_PLAIN:ELEMENT
{
    pass_wrapper_parameter="false";
    parameter_name="pdiv";
    parameter_name="wrap";
    impl
    {
        ->
        //FILE: js/elements/@PATH
        @GTEXT.BMC_INFO
        @additional_includes
        @additional_code
        //class:
        function @element_name[]_plain(@pass_wrapper_parameter[value='true',text='@element_wrapper.parameter_name[end=","]']@parameter_name[sep=','])
        {
        //constructor:
            this.wrap=wrap;
            @dom_setup_simple_box
            @constructor_extra
        //public:
            this.destroy=function()
            {
                @dom_remove_simple_box
            }
            this.preset=function()
            {
                @preset
            }
            this.onResize=function()
            {
                @onResize
            }
            
        //private:
            this.setup=function(s)
            {
                elements_setup(s,this.wrap,"plain");
            }
        }
        
        main_loader.ready();
        <-
    }
    dom_setup_simple_box
    {
        ->
            this.box=document.createElement("div");
            pdiv.appendChild(this.box);
        <-
    }
    dom_remove_simple_box
    {
        ->
                pdiv.removeChild(this.box);
        <--
    }
    preset
    {
        ->
                var o="\
                <div align='center'>\
                    loading...\
                </div>";
                this.box.innerHTML=o;
        <-
    }
}

DEF the_element_impl_plain:element,element_plain,FILE
{
    PATH="@element_name/@element_name[]_plain.js";
    OUTPUT
    {
        ->
        @impl
        <-
    }
}
